@using DistriFest.Models.ViewModels
@using Models
@model OrderViewModel


<table class="table table-responsive table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>@Model.ID @Html.HiddenFor(x => x.ID, Model.ID) <input length="12" data-val="true" data-val-required="The SelectedStatus field is required." id="SelectedStatus" name="SelectedStatus" type="hidden" value="WaitingForDC"></th>
            <th class="text-center">Bar: @Html.DropDownListFor(x => x.SelectedUserID, Model.UserList) @Html.ValidationMessageFor(x => x.SelectedUserID, null, new { @class = "text-danger" })</th>
            <th class="text-center"><button id="#goToConfirmation" class="btn btn-default" style="color: #fff; background: linear-gradient(#b3b3b3, #7a7a7a);" data-toggle="modal" data-target="#ConfirmationModal">Verwerk Levering</button></th>
        </tr>
        <tr>
            <th>Product</th>
            <th>Volume</th>
            <th>Aantal</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            @Html.EditorFor(x => x.Products[i]);
        }
    </tbody>
</table>

<div id="ConfirmationModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Levering: <span id="deliveryNo"></span> - <span id="barNo"></span></h4>
            </div>
            <div class="modal-body">
                <table class="table table-responsive" id="confTable">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Volume</th>
                            <th>Aantal</th>
                        </tr>
                    </thead>
                    <tbody id="confirmationBody"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <input id="Confirm" type="submit" value="Verwerk Bestelling" class="btn btn-default" style="color: #fff; background: linear-gradient(#b3b3b3, #7a7a7a);" />
            </div>
        </div>

    </div>
</div>

