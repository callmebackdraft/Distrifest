@using DistriFest.Models.ViewModels
@model DeliveryViewModel

@using (Html.BeginForm("ProcessDelivery", "Home", FormMethod.Post, new { id = "confirmation" }))
{
    <table class="table table-responsive table-striped table-hover table-bordered">
        <thead>
            <tr>
                @Html.HiddenFor(x => x.DeliveryTime, Model.DeliveryTime)
                @Html.HiddenFor(x => x.ID, Model.ID)
                <th>@Model.ID</th>
                <th class="text-center">Extern Kenmerk: @Html.EditorFor(x => x.ExternalID)</th>
                <th class="text-center"><button id="#goToConfirmation" class="btn btn-default" style="color: #fff; background: linear-gradient(#b3b3b3, #7a7a7a);" data-toggle="modal" data-target="#ConfirmationModal">Verwerk Levering</button></th>
            </tr>
            <tr>
                <th>Product</th>
                <th>Volume</th>
                <th>Aantal geleverd</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Products.Count; i++)
            {
                @Html.EditorFor(x => x.Products[i]);
            }
        </tbody>
    </table>

    <div id="ConfirmationModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Levering: <span id="deliveryNo"></span></h4>
                </div>
                <div class="modal-body">
                    <table class="table table-responsive" id="confTable">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Volume</th>
                                <th>Aantal</th>
                            </tr>
                        </thead>
                        <tbody id="confirmationBody">

                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Verwerk Levering" class="btn btn-default" style="color: #fff; background: linear-gradient(#b3b3b3, #7a7a7a);" />
                </div>
            </div>

        </div>
    </div>
}
