@using Models
@model Order

<div class="container" style="padding:4em; padding-top:2em;">
    <div class="row">
        <div class="col-lg-12">
            <div style="outline: 1px solid #000000; align-self:center; margin-bottom:2em; padding:.5em">
                <div class="text-center">
                    <h2 style="align-self:center">Bestelling: @Model.ID</h2>
                </div>
                <p>Bar: <b>@Model.CustomerID</b></p>
                @foreach (OrderStatus os in Model.Statuses)
                {
                    if (os.RegisteredStatus == OrderStatus.OrderStatusesEnum.WaitingForDC)
                    {
                        <p>Tijdstip bestelling: @os.RegisteredDate</p>
                    }
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-responsive table-hover table-bordered order-table" align="center">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product</th>
                        <th>Aantal</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i < Model.Products.Count + 1; i++)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@Model.Products[i - 1].Product.Name</td>
                            <td>@Model.Products[i - 1].Amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>