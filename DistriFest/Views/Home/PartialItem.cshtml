@using Models
@using System.Text.RegularExpressions;
@model OrderLine
@{
    string imgLoc = "~/Content/Images/" + Model.Product.Name + ".png";
    Console.WriteLine(imgLoc);
    string volumeString = "Volume: " + Model.Product.Volume + " " + Model.Product.VolumeType;
    string productName = Regex.Replace(Model.Product.Name, "([a-z?])[_ ]?([A-Z])", "$1 $2");
}

<div class="col-sm-4 text-center">
    <div class="col-sm-12 text-center" style="color: #999; background-color: #615192; border: 2px solid black; margin-top: 10px; box-shadow: 6px 6px 5px #343477">
        <div style="margin-top:10px; height: 160px;">
            <img src=@Url.Content(imgLoc) alt=@Model.Product.Name style="max-width:100%; max-height: 100%; pointer-events: none; -webkit-user-select: none;  -khtml-user-select: none;   -moz-user-select: none; -o-user-select: none;    user-select: none; " />
        </div>
        <center>
            <div style="margin-left: auto; margin-right: auto; height: 90px">

                <p style="color: white"> @productName <br /> @volumeString</p>


                @using (Html.BeginForm("OrderProduct", "Home", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Product, Model.Product)
                    @Html.TextBoxFor(x => x.Amount, new { type = "Number", min = "0", style = "width: 75px; margin-right: 50px" })
                    <input type="submit" value="Bestel" class="btn btn-default" style="background-color: #343477; color: #999" onclick="" />
                }
            </div>
        </center>

    </div>
</div>